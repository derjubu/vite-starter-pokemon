{
  "name": "javascript-starter",
  "private": "true",
  "scripts": {
    "dev": "vite",
    "test": "run-p html:check css:check js:check format:check",
    "test:watch": "npm run jest:watch",
    "build": "vite build",
    "serve": "vite preview",
    "jest": "npx jest",
    "jest:watch": "npx jest --watch",
    "html:check": "npx htmlhint *.html",
    "css:check": "npx stylelint ./src",
    "js:check": "npx eslint .",
    "format:check": "npx prettier --check .",
    "format:fix": "npx prettier --write .",
    "prepare": "husky install"
  },
  "devDependencies": {
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.25.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "5.1.1",
    "htmlhint": "0.15.2",
    "husky": "7.0.4",
    "lint-staged": "11.2.3",
    "npm-run-all": "4.1.5",
    "prettier": "2.4.1",
    "stylelint": "13.13.1",
    "stylelint-config-standard": "22.0.0",
    "stylelint-prettier": "1.2.0",
    "vite": "^2.6.4"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.css": "stylelint --fix",
    "*.{html,css,js,json,md}": "prettier --write"
  },
  "dependencies": {
    "jest": "27.3.1"
  }
}
